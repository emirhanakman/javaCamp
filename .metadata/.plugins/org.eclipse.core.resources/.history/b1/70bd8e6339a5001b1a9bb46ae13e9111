package oopIntro;

public class Product {
	
	public Product() { //constructor yapýcý blok 
		System.out.println("Ben çalýþtým");
		
	}
	public Product(int id, String name, double unitPrice, String details) { // overloading birden fazla metot. aþýrý yükleme
		this.id = id;
		this.name = name;
		this.unitPrice = unitPrice;
		this.detail = detail;
	}
	int id; // ürünlerin benzersiz identity deðeri. Veritabanýnda kayýtlý olan
	String name; // ürün adi
	double unitPrice; //birim fiyati
	String detail; // ürün detayi
	
}
